<style>
    .grid-cinemas-area {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
        grid-gap: 8px 10px;
        padding: 20px 0px 20px 0px;
        width: auto;
        text-transform: uppercase;
        font-weight: bold;
        font-size: 17px;
        list-style: none;
        text-align: left;
    }

    #cinemas-area {
        border-radius: 10px;
        width: 1080px;
        margin-left: -100px;
    }


    .grid-cinemas-list {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-gap: 8px 8px;
        padding: 10px 0px 40px 40px;
        font-weight: bold;
        font-size: 15px;
        list-style: none;
    }

    #cinemas-list {
        border-radius: 10px;
        width: 1080px;
        margin-left: -160px;
    }

    .active,
    span:hover {
        cursor: pointer;
        color: red;
    }

    label {
        display: block;
        text-align: center;
        text-transform: uppercase;
        font-size: 60px;
        font-weight: bold;
        color: #31d7a9;
        padding-bottom: 50px;
        margin-top: -80px;
    }

    span {
        margin: 5px;
    }

    .menu-item-has-children>a::after {
        content: none;
        font-weight: 600;
        font-family: "Font Awesome 5 Free";
        margin-left: 5px;
    }
</style>


<section class="banner-section">
    <div class="banner-bg bg_img bg-fixed" data-background="./assets/images/banner/banner01.jpg"></div>
    <div class="container">
        <div class="banner-content">
            <div>
                <label class="cinema-name">CGV CINEMAS</label>
            </div>
            <hr>

            <div id="cinemas-area">
                <ul class="grid-cinemas-area">
                    <% for (let i=0; i < cinemaComplexs.length; i++) { %>
                        <a style="text-decoration: none; color: #e7e9ec;" href="/cum-rap/<%= cinemaComplexs[i].ID %>">
                            <li>
                                <span id="cgv_city_<%= cinemaComplexs[i].ID %>" class="span">
                                    <%= cinemaComplexs[i].Ten %>
                                </span>
                            </li>
                        </a>

                        <% } %>
                </ul>
            </div>
            <hr>

            <div id="cinemas-list">
                <ul class="grid-cinemas-list">
                    <% for (let i=0; i < cinemaList.length; i++) { %>
                        <a style="text-decoration: none;" href="/phimdangchieu?rap=<%= cinemaList[i].ID %>">
                            <li class="cgv_city_1">
                                <span id="<%= cinemaList[i].ID %>">
                                    <%= cinemaList[i].Ten %>
                                </span>
                            </li>
                        </a>
                        <% } %>
                </ul>
            </div>

        </div>
    </div>
</section>