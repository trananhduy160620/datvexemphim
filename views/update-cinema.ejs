                        <div class="container">

                            <label for="email"><b>Tên rạp</b></label>
                            <input type="text" name="ten_rap" id="email" value="<%= cinema[0].Ten%>" required>

                            <label for="psw"><b>Loại rạp</b></label>
                            <input type="text"  name="loai_rap" id="psw" value="<%= cinema[0].LoaiRap%>" required>

                            <label for="psw"><b>Tỉnh/ Thành phố</b></label>
                            <select name="thanh_pho" id="psw">
                                <% for(let i=0; i < listOfCity.length; i++) { %>
                                    <option value="<%= listOfCity[i].ID %>">
                                        <%= listOfCity[i].DiaChi %>
                                    </option>
                                    <% } %>
                            </select> <br><br>

                            <label for="psw"><b>Kích thước chiếu ngang (m)</b></label>
                            <input type="text" name="chieu_ngang" id="psw" value="<%= cinema[0].KichThuocChieuNgang%>" required>

                            <label for="psw"><b>Kích thước chiếu dọc (m)</b></label>
                            <input type="text" name="chieu_doc" id="psw" value="<%= cinema[0].KichThuocChieuDoc%>" required>

