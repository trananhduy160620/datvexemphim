<!-- ==========Banner-Section========== -->
<section class="details-banner bg_img">
  <div class="container">
    <div class="details-banner-wrapper">
      <div class="details-banner-thumb">
        <img class="poster" src="<%= movie.Poster %>" alt="movie" />
        <!-- <a href="https://www.youtube.com/embed/zDqk1JhmyvE" target=_blank class="video-popup">
          <img src="/movie-detail/video-button.png" alt="movie" />
        </a> -->
      </div>

      <div class="details-banner-content offset-lg-3">
        <h3 class="title"><%= movie.Ten %></h3>
        <br />
        <a href="#" class="button"><%= movie.TheLoai %></a>
        <div class="social-and-duration">
          <div class="duration-area">
            <div class="item">
              <span> <%= movie.NgayCongChieu %> </span>
            </div>
            <div class="item">
              <span> <%= movie.ThoiLuong %> </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- ==========Banner-Section========== -->

<!-- ==========Book-Section========== -->
<section class="book-section bg-one">
  <div class="container">
    <div class="book-wrapper offset-lg-3">
      <div class="left-side">
        <div class="movie-summary">
          <% if (movie.MoTa != 'NULL') { %>
          <p><%= movie.MoTa %></p>
          <% } %>
        </div>
      </div>
      <a href="/getDatVe?rap=<%= idCinema %>&phim=<%= movie.ID %>" class="custom-button">book tickets</a>
      <% if (movie.Trailer != 'NULL') { %>
      <iframe width="800" height="420" src="<%= movie.Trailer %>"> </iframe>
      <% } %>
    </div>
  </div>
</section>

<!-- ==========Book-Section========== -->

<style>
  .title {
    text-transform: capitalize;
    font-size: 40px;
  }

  .poster {
    height: 350px;
    width: 100%;
  }

  .movie-summary {
    width: 600px;
    word-break: break-word;
    margin: 0px 20px;
  }

  .book-section {
    margin-block-end: 150px;
  }

  .details-banner-content {
    font-weight: bold;
  }
</style>
